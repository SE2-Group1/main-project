{
  "compilerOptions": {
    "target": "es6",         
    "module": "commonjs",                              
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,                                     
    "noImplicitAny": true,                          
    "skipLibCheck": true,
    "noUnusedLocals": true,   
    "outDir": "./dist",
    "baseUrl": ".", 
    "paths": {
      "*": ["node_modules/*"]
    },      
    "types": ["node", "jest", "@types/jest"]              
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
